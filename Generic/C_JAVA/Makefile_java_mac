LIB_NAME = VSDJNI
CFLAGS = -Iinclude -fPIC
LFLAGS = -Llib -l$(LIB_NAME) -Wl,-rpath,\$$ORIGIN/../lib

EXE_SRC_FILES = $(wildcard *.cc)
EXECUTABLES = $(patsubst %.cc,bin/%,$(EXE_SRC_FILES))
SRC_FILES = $(wildcard *.cc)
O_FILES = $(patsubst %.cc,build/%.o,$(SRC_FILES))

all: $(EXECUTABLES) lib/lib$(LIB_NAME).dylib

bin/%: build/%.o | lib/lib$(LIB_NAME).dylib
	mkdir -p $(@D)
	g++ $< $(LFLAGS) -o $@

lib/lib$(LIB_NAME).dylib: $(O_FILES)
	mkdir -p $(@D)
	g++ $^ -dynamiclib -Wl,$(LD_NAMESPACE) -o $@

build/%.o: %.cc
	mkdir -p $(@D)
	g++ -c $(CFLAGS) $< -o $@

clean:
	rm -rf bin build lib

CFLAGS += -MMD
-include $(shell find build -name "*.d" 2> /dev/null)